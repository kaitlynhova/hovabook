  <div class="field">
    <%= f.label :song_selection %><br />
    <%= f.text_area :song_selection %>
  </div>
  

  <div class="field">
    <%= f.label :instructions %><br />
    <%= f.text_field :instructions %>
  </div>
  <div class="field">
    <%= f.label :payment %><br />
    <%= f.text_field :payment %>
  </div>
  <div class="field">
    <%= f.label :payment_schedule %><br />
    <%= f.text_field :payment_schedule %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
