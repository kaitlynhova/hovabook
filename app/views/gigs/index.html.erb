<h1>Listing gigs</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Location</th>
    <th>Songs</th>
    <th>Instructions</th>
    <th>Payment</th>
    <th>Payment schedule</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gigs.each do |gig| %>
  <tr>
    <td><%= gig.date %></td>
    <td><%= gig.location %></td>
    <td><%= gig.songs %></td>
    <td><%= image_tag gig.image_url(:thumb) if gig.image? %></td>
    <td><%= gig.instructions %></td>
    <td><%= gig.payment %></td>
    <td><%= gig.payment_schedule %></td>
    <td><%= link_to 'Show', gig %></td>
    <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
    <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

