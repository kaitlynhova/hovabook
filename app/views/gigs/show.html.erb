<%= render 'map' %>

<div class="gig_content" style="position: absolute;top: 520px;width: 100%;">
  <h1 class="gig_show_h1">INFORMATION</h1>
  <div class="row">
    <div class="medium-6 large-6 columns left_col" style="">
     <p>
       <%= @gig.description%> 
     </p>
    </div>
      <div class="medium-6 large-6 columns right_col" style="">
        
        <div class="clearfix">
          <div class="small-6 large-6 columns">
            <h1 class="info_h1">DATE</h1>
          </div>
          <div class="small-6 large-6 columns">
            <p><%= @gig.date.strftime("%B %d, %Y") %></p>
          </div>
        </div>
        
        <div class="clearfix">
          <div class="small-6 large-6 columns">
            <h1 class="info_h1">TIME</h1>
          </div>
          <div class="small-6 large-6 columns">
            <p><%= @gig.date.strftime("%I:%M%p")%></p>
          </div>
        </div>
        
        <div class="clearfix">
          <div class="small-6 large-6 columns">
            <h1 class="info_h1">VENUE</h1>
          </div>
          <div class="small-6 large-6 columns">
            <p><%= @gig.location%></p>
          </div>
        </div>
        
        <div class="clearfix">
          <div class="small-6 large-6 columns">
            <h1 class="info_h1">AT</h1>
          </div>
          <div class="small-6 large-6 columns">
            <p><%= @gig.address %></p>
          </div>
        </div>
        
    </div>
        
  </div>
 
 
  
  
  <h1 class="gig_show_h1">SONGS</h1>
  <div class="row">
      <p><%= @gig.song_selection%></p>
  </div>
  
  <h1 class="gig_show_h1">TO DO</h1>
  
  

<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= f.hidden_field :gig_id, :value => @gig.id %>

  </div>
  <div class="field">
    <%= f.label :descritpion %><br />
    <%= f.text_area :descritpion %>
  </div>
  <div class="field">
    <%= f.label :done %><br />
    <%= f.check_box :done %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

    
    
        

  
  <div class="row">
    <div class="large-6 columns">
      <h1 class="gig_show_h1">CLIENT</h1>
      <img src="<%= @gig.clientphoto%>"> 
      


    </div>
    <div class="large-6 columns right_col">
        <h1 class="gig_show_h1">PAYMENT</h1>
      <div class="clearfix">
        <div class="small-6 large-6 columns">
          <h1 class="info_h1">TOTAL</h1>
        </div>
        <div class="small-6 large-6 columns">
          <p>$<%= @gig.payment %></p>
        </div>
      </div>
      
      <div class="clearfix">
        <div class="small-6 large-6 columns">
          <h1 class="info_h1">SCHEDULE</h1>
        </div>
        <div class="small-6 large-6 columns">
          <p><%= @gig.payment_schedule%></p>
        </div>
      </div>
      

    </div>
  </div>
  

  


   
</div>