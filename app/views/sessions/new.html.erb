<h1 class="cleantitle">HOVA BOOK</h1>

<h1 class="subtitle fadeIn animated">welcome back</h1>

<div class="form fadeInUp animated">
    <%= form_tag sessions_path do %>
    <p style="margin-bottom:38px;">
      <%= text_field_tag :email,nil, :placeholder => "EMAIL", :class => "inputstuff" %>
    </p>
    <p>
      <%= password_field_tag :password,nil, :placeholder => "PASSWORD", :class => "inputstuff"  %>
    </p>
    <p style="margin-bottom: 17px;">
      <%= submit_tag "Log In", :class => "form_button"%>
    <% end %>
</div>
<%= link_to 'Back', sessions_path %>
