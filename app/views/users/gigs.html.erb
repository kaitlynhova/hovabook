<h1 class="user_title"><%= @user.name %></h1>

<div >
  <% count = 0 %>
  <% @gigs.each do |gig| %>
      <div class="small-4 large-4 columns">
        <a href="/gigs/<%= gig.id%>">
          <div class="workinthathover">
             <div class="imgWrap">
               <%= image_tag gig.image_url(:box), :class => "brightness center-it" if gig.image? %>
             </div>
            <div class="display_name display_name_hidden" >
              <p class="gigtitle"><%=gig.title%>  </p>
              <p class="gigdate_display"> <%= gig.date.to_date.strftime("%b %d %G")%> </p>   
            </div>        
          </div>
        </a>
      </div>        
  <% end %>
</div>